<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.namaprojectfirebase">
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NamaProjectFirebase"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".DrawerActivity"
            android:exported="false"
            android:label="@string/title_activity_drawer"
            android:theme="@style/Theme.NamaProjectFirebase.NoActionBar" />
        <activity
            android:name=".AddProduct"
            android:exported="false" />
        <activity
            android:name=".Cart"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".Register"
            android:exported="false"/>
        <activity
            android:name=".Purchases"
            android:exported="false"/>
        <activity
            android:theme="@style/Theme.NamaProjectFirebase.CustomTheme"
            android:name=".Order"
            android:exported="false"/>

        <activity
            android:theme="@style/Theme.NamaProjectFirebase.CustomTheme"
            android:name=".editProduct"
            android:exported="false"/>

        <activity
            android:theme="@style/Theme.NamaProjectFirebase.CustomTheme"
            android:name=".Orders"
            android:exported="false"/>

        <activity
            android:name=".Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>