<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tablebck"
    tools:context=".ExpDateItems">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="411dp"
        android:layout_height="662dp"
        android:dividerHeight="1dp"
        android:fillViewport="true"
        android:padding="10dp"
        android:paddingBottom="57dp"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:id="@+id/myTableLayoutExp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fillViewport="true"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TableRow
                android:id="@+id/firstRow"
                android:layout_width="360dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/orderFinalDetails"
                    android:layout_width="364dp"
                    android:layout_height="match_parent"
                    android:text="OVERDUE PRODUCTS"
                    android:fontFamily="@font/aldrich"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/showAllProducts"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/show"
            app:layout_constraintHorizontal_bias="0.011"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"></ImageButton>

        <ImageButton
            android:id="@+id/cartActivity"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cart">

        </ImageButton>

        <ImageButton
            android:id="@+id/showAllOrders"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:padding="7dp"
            android:scaleType="fitCenter"
            android:src="@drawable/orders">

        </ImageButton>
        <ImageButton
            android:id="@+id/addProductActivity"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/newnew">

        </ImageButton>

        <ImageButton
            android:id="@+id/overdueActivity"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#CDCDCD"
            android:padding="6dp"
            android:scaleType="fitCenter"
            android:src="@drawable/overdue">

        </ImageButton>

        <ImageButton
            android:id="@+id/allGraphs"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/graf">

        </ImageButton>



        <ImageButton
            android:id="@+id/userListActivity"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/users">

        </ImageButton>

        <ImageButton
            android:id="@+id/addUserActivity"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:background="@color/white"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/newuser">

        </ImageButton>

    </LinearLayout>

    <ImageView
        android:id="@+id/toHome"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017"
        app:srcCompat="@drawable/home" />
    </androidx.constraintlayout.widget.ConstraintLayout>


